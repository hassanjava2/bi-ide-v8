# ===========================================
# BI-IDE v8 Environment Configuration
# إعدادات بيئة BI-IDE v8
# ===========================================
# انسخ هذا الملف إلى .env وحدث القيم
# Copy this file to .env and update values


# ===========================================
# DATABASE | قاعدة البيانات
# ===========================================

# Development (SQLite) | التطوير
# DATABASE_URL=sqlite+aiosqlite:///./bi_ide.db

# Production (PostgreSQL) | الإنتاج
DATABASE_URL=postgresql+asyncpg://bi_ide:your_secure_password@localhost:5432/bi_ide

# حجم تجمع الاتصالات | Connection pool size
DATABASE_POOL_SIZE=20

# الحد الأقصى للاتصالات الإضافية | Max overflow connections
DATABASE_MAX_OVERFLOW=40

# مهمة الاتصال (ثواني) | Connection timeout
DB_CONNECT_TIMEOUT=5


# ===========================================
# REDIS | التخزين المؤقت
# ===========================================

# عنوان Redis | Redis URL
REDIS_URL=redis://localhost:6379/0

# كلمة مرور Redis (اختياري) | Redis password (optional)
REDIS_PASSWORD=

# الحد الأقصى للاتصالات | Max connections
REDIS_MAX_CONNECTIONS=100


# ===========================================
# SECURITY | الأمان
# ===========================================

# مفتاح JWT (استخدم: openssl rand -hex 32)
# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# خوارزمية JWT | JWT algorithm
ALGORITHM=HS256

# مدة صلاحية التوكن (دقائق) | Access token expiry (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# مدة صلاحية التوكن المجدد (أيام) | Refresh token expiry (days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# بيانات اعتماد المسؤول | Admin credentials
# ⚠️ غيّر هذه القيم فوراً في الإنتاج!
ADMIN_USERNAME=president
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IMMEDIATELY_MIN_12_CHARS

# مفتاح التشفير (32 حرف) | Encryption key (32 chars)
ENCRYPTION_KEY=your-encryption-key-32-chars-long!!


# ===========================================
# SERVER | الخادم
# ===========================================

# اسم التطبيق | App name
APP_NAME=BI-IDE v8

# إصدار التطبيق | App version
APP_VERSION=8.0.0

# وضع التصحيح | Debug mode
DEBUG=false

# بيئة التشغيل | Environment
ENVIRONMENT=production

# عنوان الاستماع | Listen host
HOST=0.0.0.0

# المنفذ | Port
PORT=8000

# عدد العمال | Number of workers
WORKERS=4


# ===========================================
# CORS | مشاركة الموارد
# ===========================================

# النطاقات المسموح بها | Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# السماح بالاعتماديات | Allow credentials
CORS_ALLOW_CREDENTIALS=true


# ===========================================
# API GATEWAY | بوابة API
# ===========================================

# الحد الأقصى للطلبات/دقيقة | Rate limit per minute
GATEWAY_RATE_LIMIT_PER_MINUTE=60

# حجم الانفجار | Burst size
GATEWAY_BURST_SIZE=100

# مهلة الطلب (ثواني) | Request timeout
GATEWAY_TIMEOUT_SECONDS=30

# الحد الأقصى لإعادة المحاولة | Max retries
GATEWAY_MAX_RETRIES=3


# ===========================================
# RTX 4090 INFERENCE SERVER | خادم الاستدلال
# ===========================================

# عنوان الخادم | Server host
RTX4090_HOST=192.168.68.125

# منفذ الخادم | Server port
RTX4090_PORT=8080

# مفتاح API | API key
RTX4090_API_KEY=your-rtx-api-key

# المهلة (ثواني) | Timeout
RTX4090_TIMEOUT=300

# الحد الأقصى للطلبات المتزامنة | Max concurrent requests
RTX4090_MAX_CONCURRENT=4


# ===========================================
# AI/ML | الذكاء الاصطناعي
# ===========================================

# محلل اللغة | Tokenizer
TOKENIZER_VOCAB_SIZE=50000
TOKENIZER_MIN_FREQUENCY=2
TOKENIZER_SPECIAL_TOKENS=<pad>,<unk>,<s>,</s>,<mask>,<code>

# تحسين النموذج | Model optimization
ENABLE_QUANTIZATION=true
QUANTIZATION_MODE=fp16
ENABLE_PRUNING=false
PRUNING_SPARSITY=0.3

# مستويات التنبيه للتسلسل الهرمي | Hierarchy alert thresholds
HIERARCHY_ALERT_THRESHOLD_YELLOW=0.7
HIERARCHY_ALERT_THRESHOLD_ORANGE=0.85
HIERARCHY_ALERT_THRESHOLD_RED=0.95


# ===========================================
# ERP | نظام تخطيط الموارد
# ===========================================

# المحاسبة | Accounting
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.15
FISCAL_YEAR_START=01-01

# المخزون | Inventory
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_AUTO_REORDER=true

# الفواتير | Invoices
INVOICE_DUE_DAYS=30
INVOICE_LATE_FEE_PERCENT=1.5


# ===========================================
# COMMUNITY | المجتمع
# ===========================================

FORUM_MODERATION_ENABLED=true
FORUM_AUTO_MODERATION=true
KB_ARTICLES_PER_PAGE=20
CODE_SNIPPET_MAX_SIZE=100000


# ===========================================
# MONITORING & LOGGING | المراقبة والسجلات
# ===========================================

# مستوى التسجيل | Log level
LOG_LEVEL=INFO

# تنسيق السجل | Log format
LOG_FORMAT=json

# ملف السجل | Log file
LOG_FILE=logs/bi-ide.log

# الحد الأقصى لحجم الملف | Max log file size
LOG_MAX_SIZE=10MB

# عدد النسخ الاحتياطية | Backup count
LOG_BACKUP_COUNT=5

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Sentry
SENTRY_DSN=
SENTRY_ENVIRONMENT=production


# ===========================================
# EMAIL | البريد الإلكتروني
# ===========================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_FROM=noreply@your-domain.com


# ===========================================
# STORAGE | التخزين
# ===========================================

# التخزين المحلي | Local storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# AWS S3 (اختياري) | AWS S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1


# ===========================================
# FEATURE FLAGS | مؤشرات الميزات
# ===========================================

ENABLE_REAL_TIME_CHAT=true
ENABLE_VIDEO_CALLS=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_AI_SUGGESTIONS=true


# ===========================================
# DEVELOPMENT | التطوير
# ===========================================

HOT_RELOAD=true
DEBUG_SQL=false
MOCK_SERVICES=false


# ===========================================
# CACHE | التخزين المؤقت
# ===========================================

# الحد الأقصى لحجم ذاكرة التخزين | Max in-memory cache size
CACHE_LRU_MAX_SIZE=10000

# مدة الصلاحية الافتراضية (ثواني) | Default TTL (seconds)
CACHE_DEFAULT_TTL=300

# الاستعاضة بالذاكرة | Fallback to memory
CACHE_FALLBACK_TO_MEMORY=true
