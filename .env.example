# BI-IDE v8 Environment Configuration
# ====================================
# Copy this file to .env and update with your values

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Development (SQLite)
# DATABASE_URL=sqlite+aiosqlite:///./bi_ide.db

# Production (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://bi_ide:your_secure_password@localhost:5432/bi_ide
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ===================================
# SECURITY CONFIGURATION
# ===================================
# JWT Secret (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin credentials
# ⚠️ CHANGE THESE IMMEDIATELY IN PRODUCTION
ADMIN_USERNAME=president
ADMIN_PASSWORD=CHANGE_THIS_STRONG_PASSWORD_IMMEDIATELY_MIN_12_CHARS

# Encryption
ENCRYPTION_KEY=your-encryption-key-32-chars-long!!

# ===================================
# SERVER CONFIGURATION
# ===================================
APP_NAME=BI-IDE v8
APP_VERSION=8.0.0
DEBUG=false
ENVIRONMENT=production

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com
CORS_ALLOW_CREDENTIALS=true

# ===================================
# API GATEWAY CONFIGURATION
# ===================================
GATEWAY_RATE_LIMIT_PER_MINUTE=60
GATEWAY_BURST_SIZE=100
GATEWAY_TIMEOUT_SECONDS=30
GATEWAY_MAX_RETRIES=3

# ===================================
# RTX 4090 INFERENCE SERVER
# ===================================
RTX4090_HOST=192.168.68.125
RTX4090_PORT=8080
RTX4090_API_KEY=your-rtx-api-key
RTX4090_TIMEOUT=300
RTX4090_MAX_CONCURRENT=4

# ===================================
# AI/ML CONFIGURATION
# ===================================
# Tokenizer
TOKENIZER_VOCAB_SIZE=50000
TOKENIZER_MIN_FREQUENCY=2
TOKENIZER_SPECIAL_TOKENS=<pad>,<unk>,<s>,</s>,<mask>,<code>

# Model Optimization
ENABLE_QUANTIZATION=true
QUANTIZATION_MODE=fp16
ENABLE_PRUNING=false
PRUNING_SPARSITY=0.3

# AI Hierarchy
HIERARCHY_ALERT_THRESHOLD_YELLOW=0.7
HIERARCHY_ALERT_THRESHOLD_ORANGE=0.85
HIERARCHY_ALERT_THRESHOLD_RED=0.95

# ===================================
# ERP CONFIGURATION
# ===================================
# Accounting
DEFAULT_CURRENCY=USD
DEFAULT_TAX_RATE=0.15
FISCAL_YEAR_START=01-01

# Inventory
INVENTORY_LOW_STOCK_THRESHOLD=10
INVENTORY_AUTO_REORDER=true

# Invoices
INVOICE_DUE_DAYS=30
INVOICE_LATE_FEE_PERCENT=1.5

# ===================================
# COMMUNITY CONFIGURATION
# ===================================
FORUM_MODERATION_ENABLED=true
FORUM_AUTO_MODERATION=true
KB_ARTICLES_PER_PAGE=20
CODE_SNIPPET_MAX_SIZE=100000

# ===================================
# MONITORING & LOGGING
# ===================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/bi-ide.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=true
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# Sentry (error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# ===================================
# EMAIL CONFIGURATION (SMTP)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
SMTP_FROM=noreply@your-domain.com

# ===================================
# STORAGE CONFIGURATION
# ===================================
# Local storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=10485760

# S3 (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_REAL_TIME_CHAT=true
ENABLE_VIDEO_CALLS=false
ENABLE_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_BILLING=true
ENABLE_AI_SUGGESTIONS=true

# ===================================
# DEVELOPMENT SETTINGS
# ===================================
# Only for development!
HOT_RELOAD=true
DEBUG_SQL=false
MOCK_SERVICES=false
